{
  "name": "sigver",
  "description": "Signaling server for Netflux API based on WebSocket",
  "version": "0.0.0-development",
  "main": "dist/server.js",
  "bin": {
    "sigver": "dist/server.js"
  },
  "files": [
    "dist/"
  ],
  "engines": {
    "node": ">=8.1.4"
  },
  "scripts": {
    "dev": "nodemon -e ts -w ./src -x ts-node ./src/index.ts -- --port 8010 | bunyan",
    "lint": "tslint --fix -p tsconfig.json && prettier --write --list-different 'src/**/*.ts' 'test/**/*.{js}' './*.{ts,js,json,md}'",
    "build": "npm run proto && webpack",
    "proto": "pbjs -t static-module --es6 -w es6 --no-verify --no-delimited --no-convert -o src/proto/index.js src/proto/index.proto && pbts src/proto/index.js -o src/proto/index.d.ts",
    "pretest": "npm run build && pm2 restart process.yml",
    "test": "karma start",
    "test:chrome": "karma start --browsers Chrome",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "WebRTC",
    "WebSocket",
    "Server-Sent-Event",
    "signaling",
    "server",
    "netflux"
  ],
  "author": "Philippe Kalitine <philippe.kalitine@gmail.com> (https://philippe.kalitine.page)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/coast-team/sigver.git"
  },
  "dependencies": {
    "bunyan": "^1.8.12",
    "protobufjs": "^6.8.5",
    "rxjs": "^6.5.3",
    "ws": "^7.2.0"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.1",
    "utf-8-validate": "^5.0.2"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.6",
    "@types/commander": "^2.12.2",
    "@types/uws": "^0.13.1",
    "@types/ws": "^6.0.3",
    "commander": "^3.0.2",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^3.0.9",
    "jasmine": "^3.5.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-firefox-launcher": "^1.2.0",
    "karma-jasmine": "^2.0.1",
    "karma-spec-reporter": "0.0.32",
    "karma-webpack": "^4.0.2",
    "lint-staged": "^9.4.2",
    "nodemon": "^1.19.4",
    "pm2": "^4.1.2",
    "prettier": "^1.18.2",
    "semantic-release": "^15.13.27",
    "travis-deploy-once": "^5.0.11",
    "ts-loader": "^6.2.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "~3.6.4",
    "validate-commit-msg": "^2.14.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9",
    "webpack-node-externals": "^1.7.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test -- --no-auto-watch --single-run",
      "commitmsg": "validate-commit-msg"
    }
  },
  "lint-staged": {
    "*.{md,ts,json,scss,css}": [
      "prettier --write --list-different",
      "git add"
    ],
    "*.ts": [
      "tslint --fix -p tsconfig.json -e src/proto/*",
      "git add"
    ]
  }
}
