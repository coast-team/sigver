{
  "name": "sigver",
  "description": "WebRTC signaling server based on WebSocket and Server-Sent-Event",
  "version": "0.0.0-sementically-released",
  "main": "server.js",
  "jsnext:main": "src/WSServer.js",
  "bin": {
    "sigver": "server.js"
  },
  "engines": {
    "node": ">=6.9.5"
  },
  "scripts": {
    "start": "node server.js",
    "dev": " npm run build && node server.js | bunyan",
    "lint": "eslint ./",
    "sse": "npm run build && node server.js -h localhost -t sse",
    "build": "rollup -c rollup.config_ws.js && rollup -c rollup.config.js",
    "pretest": "npm run build && pm2 gracefulReload process.yml",
    "test": "karma start karma.conf.js",
    "precommit": "npm test -- --no-auto-watch --single-run",
    "commitmsg": "validate-commit-msg",
    "cz": "git-cz",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "keywords": [
    "WebRTC",
    "WebSocket",
    "Server-Sent-Event",
    "signaling",
    "server"
  ],
  "author": "Philippe Kalitine <philippe.kalitine@gmail.com> (http://philippe.kalitine.name/)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/coast-team/sigver.git"
  },
  "dependencies": {
    "bunyan": "^1.8.9",
    "commander": "^2.9.0",
    "rxjs": "^5.2.0",
    "shortid": "^2.2.8",
    "sse-channel": "^2.0.3",
    "ws": "^2.0.1"
  },
  "optionalDependencies": {
    "uws": "^0.14.0"
  },
  "devDependencies": {
    "commitizen": "^2.5.0",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^3.14.1",
    "eslint-config-conaclos": "^1.2.0",
    "eslint-config-standard": "^10.0.0",
    "eslint-plugin-extra-rules": "0.6.1",
    "eslint-plugin-promise": "^3.0.0",
    "eslint-plugin-standard": "^2.0.0",
    "husky": "^0.13.1",
    "jasmine": "^2.5.2",
    "jasmine-spec-reporter": "^3.0.0",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-rollup-preprocessor": "^4.0.0",
    "karma-spec-reporter": "^0.0.30",
    "pm2": "^2.3.0",
    "rollup": "^0.41.4",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-filesize": "^1.0.1",
    "rollup-plugin-node-resolve": "^3.0.0",
    "semantic-release": "^6.3.2",
    "validate-commit-msg": "^2.11.1"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
